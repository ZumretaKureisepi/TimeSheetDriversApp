@model UsersUpdateVM
@{
    ViewData["Title"] = "Edit User";
}
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Request.UserId" />
    <div class="card card-primary col-md-12">
        <div class="card-header">
            <h3 class="card-title">@ViewData["Title"]</h3>
        </div>
        <div class="card-body col-md-4" style="margin: 0 auto">
            <div class="form-group">
                <label asp-for="Request.FirstName"></label>
                <input asp-for="Request.FirstName" class="form-control">
                <span asp-validation-for="Request.FirstName"></span>
            </div>
            <div class="form-group">
                <label asp-for="Request.LastName"></label>
                <input asp-for="Request.LastName" class="form-control">
                <span asp-validation-for="Request.LastName"></span>
            </div>
            <div class="form-group">
                <label asp-for="Request.Email"></label>
                <input asp-for="Request.Email" class="form-control">
                <span asp-validation-for="Request.Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="Request.NewPassword"></label>
                <input asp-for="Request.NewPassword" class="form-control">
                <span asp-validation-for="Request.NewPassword"></span>
            </div>
            <div class="form-group">
                <label asp-for="Request.FMNumber"></label>
                <input asp-for="Request.FMNumber" class="form-control">
                <span asp-validation-for="Request.FMNumber"></span>
            </div>
            <div class="form-group">
                <label asp-for="Request.RoleId"></label>
                <select asp-for="Request.RoleId" asp-items="Model.RoleList" class="form-control custom-select">
                    <option selected="" disabled="">Select one</option>
                </select>
                <span asp-validation-for="Request.RoleId"></span>
            </div>

            <button class="btn btn-primary">Submit</button>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->

</form>