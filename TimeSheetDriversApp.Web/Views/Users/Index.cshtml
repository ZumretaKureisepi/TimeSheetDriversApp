@model List<UserDTO>
@{
    ViewData["Title"] = "User List";
}
<div style="padding-left: 8px">
    <a class="btn btn-primary btn-sm" asp-action="Create">
        <i class="fas fa-user-plus">
        </i>
        Create User
    </a>
</div>

<br />
<div class="card">
    <div class="card-body p-0">


        <table class="table table-striped projects">
            <thead>
                <tr>
                    <th style="width: 1%">
                        PersonalNo
                    </th>
                    <th style="width: 13%">
                        Username
                    </th>
                    <th style="width: 17%">
                        Name
                    </th>
                    <th width="5%">
                        FM#
                    </th>
                    <th style="width: 10%">
                        Role
                    </th>
                    <th style="width: 10%">
                        Entry Date
                    </th>
                    <th style="width: 18%">
                        E-Mail Address
                    </th>
                    <th style="width: 20%">
                        Action
                    </th>
                </tr>

            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.PersonalNo
                        </td>
                        <td>
                            @item.Username
                        </td>
                        <td>
                            @item.FirstName @item.LastName
                        </td>
                        <td>
                            @item.FMNumber
                        </td>
                        <td>
                            <span class="badge badge-success">@item.Role.RoleName</span>
                        </td>
                        <td>
                            @item.EntryDate.ToShortDateString()
                        </td>
                        <td>
                            @item.Email
                        </td>

                        <td class="project-actions">
                            <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@item.UserId">
                                <i class="fas fa-pencil-alt">
                                </i>
                                Edit
                            </a>
                            @*<a class="btn btn-danger btn-sm" href="#">
                                <i class="fas fa-trash">
                                </i>
                                Delete
                            </a>*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

    <!-- /.card-body -->
</div>
<!-- /.card -->